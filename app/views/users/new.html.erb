<h1>Register</h1>

<%= form_for :user, html: {class: 'login_form'} do |form| %>
  First Name: <%= form.text_field :first_name %><br>
  Last Name: <%= form.text_field :last_name %><br>
  Email: <%= form.text_field :email %><br>
  Password: <%= form.password_field :password %><br>
  Password Confirmation: <%= form.password_field :password_confirmation %><br>
  <%= form.submit "Submit", {class: "submit btn btn-primary"} %>
<% end %>