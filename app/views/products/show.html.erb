<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <% if @average.to_i == 0 %>
          <h4><dt>Product Rating</dt>
            <dd>This product has not been rated yet.</dd></h4>
          <% else %>
          <h4><dt>Product Rating</dt>
            <dd><%= @average.to_i %> out of 5</dd></h4>
          <% end %>
        </dl>
      </div>
    </div>
    <%= render 'review' %>
      <h3 class="page-header"> Reviews: </h3>
      <br/>
      <% @reviews.each do |review| %>
        <%= render 'rating', review: review%>
    <% end %>
  </article>

</section>
